<div class="udin-loader-page" id="loader">
  <img class="udin-kuda" src="ino.png" alt="personal-logo" width="200px" />
</div>

<style>
  .udin-loader-page {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #fff;
    z-index: 9999;
    display: flex;
    justify-content: center;
    align-items: center;
    animation: fadeOut 1.5s ease-in-out 3s forwards;
  }

  .udin-kuda {
    animation: complexSpin 3s ease-in-out forwards;
  }

  @keyframes complexSpin {
    0% {
      transform: rotate(0deg) scale(1);
    }
    25% {
      transform: rotate(180deg) scale(1);
    }
    50% {
      transform: rotate(360deg) scale(1);
    }
    75% {
      transform: rotate(540deg) scale(1);
    }
    100% {
      transform: rotate(720deg) scale(1);
    }
  }

  @keyframes fadeOut {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
      visibility: hidden;
    }
  }
</style>

<script>
  setTimeout(() => {
    const loader = document.getElementById("loader");
    if (loader) {
      loader.style.display = "none";
    }
  }, 2500);
</script>
